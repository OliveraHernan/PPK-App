{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*":         ["./src/app/*"],
      "@app/*":      ["./src/app/*"],
      "@lib/*":      ["./src/lib/*"],
      "@pages/*":    ["./src/app/(pages)/*"],
      "@public/*":   ["./../public/*"],
      "@styles/*":   ["./src/app/(app)/_styles/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/(pages)/api/sessions/route.ts"],
  "exclude": ["node_modules"]
}